{% extends "layout.jinja" %}

{% block title %}Challenge vom {{ session.datestring }}{% endblock %}
{% block heading %}{{ session.name }}{% endblock %}
{% block subheading %}{{ session.datestring }}{% endblock %}

{% block main %}
<p>{{ session.challenge }}</p>

<hr>

<div class="list-group text-left">
	{% for file in session.files %}
	<a href="{{ session.yyyymmdd }}/{{ file.name }}" class="list-group-item list-group-item-action">
		<div class="d-flex justify-content-between">
			<h5 class="mb-1">{{ file.name }}</h5>
			<small class="text-muted">{{ file.duration }}</small>
		</div>
		<div class="d-flex justify-content-between">
			<p class="mb-1 text-muted">{{ file.author }}</p>
			<small class="text-muted">{{ file.size }}</small>
		</div>
	</a>
	{% endfor %}
</div>

<hr>

<div class="d-flex justify-content-between">
	<span><a href="/archiv">Archiv</a> / {{ session.yyyymmdd }}</span>
	<a class="download-link" title="Download" href="{{ session.yyyymmdd }}.zip"><span></span></a>
</div>
{% endblock %}
