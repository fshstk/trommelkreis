{% extends "layout.jinja" %}

{% block title %}Archiv{% endblock %}

{% block main %}
<div class="text-center">
	<h1 class="font-weight-bold">Archiv</h1>
	<h6 class="text-muted">des digitalen Trommelkreises</h6>
	<img src="{{ url_for('static', filename='logo.png') }}" width="500px" class="img-fluid p-3" alt="logo">
	{# <hr> #}
</div>

<div class="archive">
{% for month in archive %}
<hr>
<h3 class="month">{{ month[0].month }} <small class="year">{{ month[0].year }}</small></h3>
<div class="row">
	<div class="col-md-6">
		<div class="list-group text-left">
			{% for session in month %}
			<a href="#" class="list-group-item list-group-item-action">
				<div class="d-flex justify-content-between">
					<h5 class="mb-1">{{ session.name }}</h5>
					<small class="text-muted">{{ session.datestring }}</small>
				</div>
				<p class="mb-1">{{ session.challenge_short }}</p>
				<small class="text-muted">{{ session.countstring }}</small>
			</a>

	{# break into 2nd column after half of the elements: #}
	{% if loop.index == (loop.length/2)|round(method = 'ceil') %}
		</div>
	</div>
	<div class="col-md-6">
		<div class="list">
	{% endif %}
	
			{% endfor %}
		</div>
	</div>
</div>
{% endfor %}
</div>
{% endblock %}