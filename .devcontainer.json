{
  "build": {
    "dockerfile": "Dockerfile",
    "target": "develop"
  },
  "postCreateCommand": "poetry install",
  "runArgs": [
    "--env-file",
    ".env"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "batisteo.vscode-django",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  }
}
